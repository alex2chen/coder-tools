<%@ page language="java"  pageEncoding="utf-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt" %>
<form class="form-inline" role="form" id="$!{instName}Form">
<table class="table   table-hover"  >
#foreach($field in $fields)
    
       #if($field.propertyName!=$pkname)
           #if($!{excludeFieldsMap.contains($field.propertyName)}!=$field.propertyName)
 <tr>
     <td class="col-lg-1">$!field.comment</td>
     <td>
               #if($field.jdbcType=="DATETIME"||$field.jdbcType=="DATE")
                   <input type="text" name="$!field.propertyName" class="form-control"  value="${$!{instName}.$!field.propertyName}"     onclick="WdatePicker({skin:'whyGreen',dateFmt:'yyyy-MM-dd HH:mm'})"/>
               #else
                    <input type="text" name="$!field.propertyName"  value="${$!{instName}.$!field.propertyName}" class="form-control"/>
               #end
  </td> 

  </tr>	 #end #end
#end

     
    <tr>
        <td class="col-lg-1" colspan="2">
            <input type="button"   class="btn  btn-warning" value="更新" form="$!{instName}Form"  action='put'
                   requestUrl='/$!{instName}/edit'  method="formRequest"/>
        </td>
    <input type="hidden" value="${$!{instName}.$!{pkname}}" name="$!{pkname}" >
    </tr>
</table>
    </form>